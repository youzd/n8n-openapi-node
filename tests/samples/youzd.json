{
    "openapi": "3.0.0",
    "components": {
        "examples": {},
        "headers": {},
        "parameters": {},
        "requestBodies": {},
        "responses": {},
        "schemas": {
            "Advantage": {
                "description": "Possible values :<br />\n<br />\n<dl>\n<dt>usedLessThan14Days</dt>\n<dd>Product returned within 14 days after purchase </dd>\n<dt>refurbished</dt>\n<dd>Refurbished products</dd>\n<dt>neverUnpacked</dt><dd>Product that has not been used because it was refused at delivery (damaged) or was never delivered because lost and found, any product that has never been used nor fixed if it was damaged</dd>\n</dl>",
                "enum": [
                    "usedLessThan14Days",
                    "neverUnpacked",
                    "refurbished"
                ],
                "type": "string"
            },
            "ColorName": {
                "description": "At least one and up to three colors can be specified on a product. They should be sorted in order of importance on the product.",
                "enum": [
                    "Noir",
                    "Blanc",
                    "Beige",
                    "Gris",
                    "Rouge",
                    "Rose",
                    "Orange",
                    "Jaune",
                    "Vert",
                    "Bleu",
                    "Violet",
                    "Marron",
                    "Bois clair",
                    "Bois foncé",
                    "Transparent",
                    "Cuivré",
                    "Argenté",
                    "Doré"
                ],
                "type": "string"
            },
            "ProductInput": {
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "4 seater convertible sofa",
                        "minLength": 10,
                        "maxLength": 50,
                        "pattern": "^[^\u003C\u003E;=#{}]*$"
                    },
                    "brand": {
                        "type": "string",
                        "description": "Brand of the product"
                    },
                    "advantage": {
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/Advantage"
                            }
                        ],
                        "nullable": true
                    },
                    "colors": {
                        "items": {
                            "$ref": "#/components/schemas/ColorName"
                        },
                        "type": "array"
                    },
                    "photos": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array",
                        "description": "Urls of photos for the product. These urls need to be puvblic to allow downloading the photos.",
                        "minItems": 2
                    }
                },
                "required": [
                    "title"
                ],
                "type": "object",
                "additionalProperties": false
            }
        },
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "jwt",
                "description": "please look at the authentication route of this api for details on how to generate an access token"
            }
        }
    },
    "info": {
        "title": "api",
        "version": "1.0.0",
        "description": "Minimal api with optional parameters",
        "license": {
            "name": "MIT"
        },
        "contact": {}
    },
    "paths": {
        "/catalog": {
            "post": {
                "operationId": "CreateProduct",
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "id"
                                    ],
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "description": "Create a new product",
                "security": [
                    {
                        "bearer": []
                    }
                ],
                "parameters": [],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProductInput"
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
            "url": "/api/v1"
        }
    ]
}